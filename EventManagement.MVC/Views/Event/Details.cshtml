@model EventViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="mt-5">Event Details</h1>
    <hr />
    <div class="row">
        <div class="col-sm-6">
            <dl class="row">
                <dt class="col-sm-4">Name:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                <dt class="col-sm-4">City:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.City)</dd>
                <dt class="col-sm-4">Address:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>
                <dt class="col-sm-4">Description:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>
                <dt class="col-sm-4">Ticket Quantity:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.TicketQuantity)</dd>
                <dt class="col-sm-4">Available Tickets:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.AvailableTickets)</dd>
                <dt class="col-sm-4">Start Date:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.StartDate)</dd>
                <dt class="col-sm-4">End Date:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EndDate)</dd>
            </dl>
        </div>
        <div class="col-sm-6">
            <img src="@Model.PhotoPath" alt="Event Image" style="width: 100%;" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 text-center mt-3">
            <a href="@Url.Action("PurchaseTicket", new { id = Model.Id })" class="btn btn-primary mr-2">Purchase a Ticket</a>
            <a href="@Url.Action("ReserveTicket", new { id = Model.Id })" class="btn btn-secondary">Reserve a Ticket</a>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-12 text-center">
            <a href="@Url.Action("Index")" class="btn btn-info">Back to List</a>
        </div>
    </div>
</div>
